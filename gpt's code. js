console.log("Today is not Monday or Tuesday");
}
// Declare a while loop to execute code while a condition is true
var i = 0;
while (i < 5) {
console.log(i);
i++;
}
// Declare a do-while loop to execute code at least once
var j = 0;
do {
console.log(j);
j++;
} while (j < 5);
// Declare a function that returns a value
function addNumbers(a, b) {
return a + b;
}
// Call the function and store the result in a variable
var sum = addNumbers(3, 5);
console.log(sum);
// Declare a function expression and assign it to a variable
var multiplyNumbers = function(a, b) {
return a * b;
};
// Call the function expression and store the result in a variable
var product = multiplyNumbers(4, 6);
console.log(product);
// Use the setTimeout function to delay the execution of code
setTimeout
