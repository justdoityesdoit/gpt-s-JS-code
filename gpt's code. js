// This is a comment in JavaScript
// Declare a variable with the var keyword
var myVariable = "Hello, World!";
// Display the value of the variable in the console
console.log(myVariable);
// Declare a function with the function keyword
function sayHello() {
console.log("Hello, World!");
}
// Call the function
sayHello();
// Declare a function with a parameter
function sayName(name) {
console.log("My name is " + name);
}
// Call the function with an argument
sayName("John");
// Declare an object with curly braces {}
var person = {
firstName: "John",
lastName: "Doe",
age: 30
};
// Access the properties of the object with dot notation
console.log(person.firstName);
// Declare an array with square brackets []
var myArray = ["apple", "banana", "orange"];
// Access the elements of the array with indexing
console.log(myArray[0]);
// Use a for loop to iterate over an array
for (var i = 0; i < myArray.length; i++) {
console.log(myArray[i]);
}
// Declare a conditional statement with the if keyword
var x = 10;
if (x > 5) {
console.log("x is greater than 5");
}
// Declare an else statement to handle the opposite condition
if (x > 15) {
console.log("x is greater than 15");
} else {
console.log("x is less than or equal to 15");
}
// Declare a switch statement to handle multiple conditions
var dayOfWeek = "Monday";
switch (dayOfWeek) {
case "Monday":
